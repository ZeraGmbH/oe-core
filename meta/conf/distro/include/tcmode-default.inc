PREFERRED_VERSION_cross-localedef-native   ?= "${EGLIBCVERSION}"
PREFERRED_VERSION_uclibc                   ?= "${UCLIBCVERSION}"
PREFERRED_VERSION_uclibc-initial           ?= "${UCLIBCVERSION}"

PREFERRED_VERSION_automake                 ?= "1.12.6"
PREFERRED_VERSION_automake-native          ?= "1.15"
PREFERRED_VERSION_lzo                      ?= "2.06"
PREFERRED_VERSION_lzo-native               ?= "2.09"
PREFERRED_VERSION_e2fsprogs                ?= "1.42.1"
PREFERRED_VERSION_e2fsprogs-native         ?= "1.42.9"
PREFERRED_VERSION_libgpg-error             ?= "1.10"
PREFERRED_VERSION_libgpg-error-native      ?= "1.19"
PREFERRED_VERSION_pixman                   ?= "0.28.2"
